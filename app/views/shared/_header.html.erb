<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class="top-page-header">

  <div class="search-bar-contents">
    <%= link_to image_tag("furima-logo-color.png", class: "furima-icon", alt: "Furima"), root_path %>

    <form class="search-form" action="#">
      <input class="input-box" placeholder="キーワードから探す">
      <button class="search-button" type="submit">
        <%= image_tag "search.png", class: "search-icon", alt: "検索" %>
      </button>
    </form>
  </div>

  <div class="nav">
    <ul class="lists-left">
      <li><%= link_to "カテゴリー", "#", class: "category-list" %></li>
      <li><%= link_to "ブランド",    "#", class: "brand-list" %></li>
    </ul>

    <ul class="lists-right">
      <% if user_signed_in? %>
        <li>
          <span class="user-nickname">ようこそ、<strong><%= display_nickname(current_user) %></strong> さん</span>
        </li>
        <li class="logout">
          <li class="logout">
           <%= button_to "ログアウト",
            destroy_user_session_path,
            method: :delete,
            class: "logout",
            form: { "data-turbo" => "true", class: "logout-form" } %>   
        </li>
        <% else %>
        <li><%= link_to "ログイン",    new_user_session_path,     class: "login" %></li>
        <li><%= link_to "新規登録",    new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>
</header>